	}
	.slider_container {  
		position: relative;  width: 100%;  overflow: hidden;  height: 550px;  top: 0;  z-index: 2;  background: linear-gradient(to bottom, rgba(107,107,107,1) 0%, rgba(255,255,255,0.33) 67%, rgba(255,255,255,0) 100%);
	}
	.slider_bg {  
