	.slide_time{  
		position:absolute;  z-index:1004;  width: 70px;  height: 70px;  right: -85px;  top: 15px;  transform: skewX(10deg);
	}
	
	.slider_container:after{	
		content:"";	position:absolute;	height:500px;	left:0;	right:0;	background-color:#000;	top:0;	z-index:-100;
